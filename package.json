{
  "name": "@lernato/cli",
  "version": "0.1.0",
  "description": "A command line program for generating JavaScript and TypeScript projects and boilerplate code.",
  "author": "Lernato, LLC",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lernato-cli": "./dist/index.js"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project \".\"",
    "prepush": "npm run build",
    "push": "npm publish --access public",
    "push:major": "npm version major --no-git-tag-version && npm run push",
    "push:minor": "npm version minor --no-git-tag-version && npm run push",
    "push:patch": "npm version patch --no-git-tag-version && npm run push",
    "watch": "npm-watch",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@lernato/common": "4.1.1",
    "@types/fs-extra": "8.0.1",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.8",
    "fs-extra": "8.1.0",
    "jest": "24.9.0",
    "npm-watch": "0.6.0",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "tslint": "5.20.1",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.7.2"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
